            self.apply_system_phase_{{ phase.name.field }}();
            self.fixed_accumulators.{{ phase.name.field }} -= SystemPhase::{{ phase.name.field | upper }}_SECS;
        }

        self.context.fixed_time_secs = 0.0;
        {%- endif %}
        {%- endfor %}
        self.on_end_frame();
